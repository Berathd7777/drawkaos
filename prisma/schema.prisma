// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime
  rooms     Room[]
}

model Room {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime
  admin     Player   @relation(fields: [adminId], references: [id])
  adminId   String
}
